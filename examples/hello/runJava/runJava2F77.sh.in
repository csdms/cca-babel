## Description: script to run Java calling F77 hello example
##

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@
VERSION=@VERSION@
JAVA="@JAVA@"

case "`uname`" in
  CYGWIN*) cygwin=true;;
  *) cygwin=false;;
esac

if test -f ../../stamp-installcheck; then
  CLASSPATH="${prefix}/lib/sidl-${VERSION}.jar:."
  SIDL_DLL_PATH="libClient.scl;../libF77/libImpl.scl;${libdir}/libsidl.scl"
  if $cygwin; then
    JAVA_LIBRARY_PATH="${bindir}"
  else
    JAVA_LIBRARY_PATH="${libdir}"
  fi
else
  CLASSPATH="../../../lib/sidl-@VERSION@.jar:../libJava:../../../runtime/java:../../../lib/sidlstubs/Java/sidlstub_${VERSION}.jar:."
  SIDL_DLL_PATH="libClient.scl;../libF77/libImpl.scl;../../../runtime/sidl/libsidl.scl;../../../lib/sidlstubs/Java/libsidlstub_java.scl;"
  JAVA_LIBRARY_PATH="../../../runtime/sidl/.libs"
fi
sidl_LIBRARY_NAME=sidl

if $cygwin; then
  CLASSPATH=`cygpath --path --windows "${CLASSPATH}"`
  JAVA_LIBRARY_PATH=`cygpath --path --windows "${JAVA_LIBRARY_PATH}"`
  sidl_LIBRARY_NAME=cygsidl-`echo ${VERSION} | tr . -`
fi
export SIDL_DLL_PATH
export CLASSPATH

${JAVA} \
  -Djava.library.path="${JAVA_LIBRARY_PATH}" \
  -Dsidl.library.name="${sidl_LIBRARY_NAME}" \
  HelloClient
