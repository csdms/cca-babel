#
# Run the tests
#

echo "TEST_BEGIN 1 vect.SIDL->SIDL"
echo "PART 1"
diff ./sidl/vect.sidl ./xml/vect.sidl > /dev/null \
     && (echo "RESULT 1 PASS" && echo "TEST_RESULT PASS") \
     || (echo "RESULT 1 FAIL" && echo "TEST_RESULT FAIL") 

echo
echo "TEST_BEGIN 1 vect.XML->XML"
echo "PART 1"
grep -v Metadata ./xml/vect-*.xml > temp
grep -v Metadata ./xml2/vect-*.xml > temp2
diff temp temp2 > /dev/null \
     && (echo "RESULT 1 PASS" && echo "TEST_RESULT PASS") \
     || (echo "RESULT 1 FAIL" && echo "TEST_RESULT FAIL") 

echo
echo "TEST_BEGIN 1 vect.Utils.XML->XML"
echo "PART 1"
grep -v Metadata ./xml/vect.Utils-*.xml > temp
grep -v Metadata ./xml2/vect.Utils-*.xml > temp2
diff temp temp2 > /dev/null \
     && (echo "RESULT 1 PASS" && echo "TEST_RESULT PASS") \
     || (echo "RESULT 1 FAIL" && echo "TEST_RESULT FAIL") 

rm -rf temp temp2
